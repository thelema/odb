# dynamic types for ocaml (via syntax extension)
dyntype git=git://github.com/mirage/dyntype.git

expat tarball=http://mmzeeman.home.xs4all.nl/ocaml/ocaml-expat-0.9.1.tar.gz inst_type=lib

inifiles tarball=http://homepage.mac.com/letaris/inifiles-1.2.tar.gz inst_type=lib

# Unicode lexer
ulex tarball=http://www.cduce.org/download/ulex-1.1.tar.gz

# CSV file parser
